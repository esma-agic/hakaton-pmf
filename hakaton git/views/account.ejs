<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/bottomNav.css">
    <link rel="stylesheet" href="/css/account.css">

    <title>Project manager</title>
</head>
<body>
<!--bottom Nav-->
<%- include('partials/bottomNav') %>

<nav class="navbar bg-white shadow-sm border  p-0">
    <div class="container">
        <h1 class="p-2">Account</h1>
    </div>
</nav>


<div class="container ">
    <div class="container-fluid mt-3 personal-info">
        <p class="font-weight-bold">Licni podaci</p>
        <div class="border p-1 bg-white"><p  class="p-1 m-0"><span class="text-muted">Username:</span>
              <span class="font-weight-bold"><%=student.username%></span>
            </p>
        </div>


        <div class="border p-1 bg-white"><p  class="p-1 m-0"><span class="text-muted">Ime:</span>
                <span class="font-weight-bold"><%=student.name%></span></p>
        </div>
        <div class="border p-1 bg-white"><p  class="p-1 m-0"><span class="text-muted">Prezime:</span>
                <span class="font-weight-bold"><%=student.lastname%></span></p>
        </div>

        <div class="border p-1 bg-white"><p  class="p-1 m-0"><span class="text-muted">Email:</span>
                <span class="font-weight-bold"><%=student.email%></span></p>
        </div>


        <div class="border p-1 bg-white"><p  class="p-1 m-0"><span class="text-muted">Broj objava: </span>
                <span class="font-weight-bold"> <%=myPosts%></span></p>
        </div>

        <div class="border p-1 bg-white"><p  class="p-1 m-0">
                <span class="text-muted">Broj prijavljenih instrukcija: </span>
                <span class="font-weight-bold"><%=subscribedPosts%></span></p>
        </div>

    </div>




    <div class="container mt-3 log-out">

        <form action="/logout" method="get">
            <button class="font-weight-bold btn text-left bg-white btn-block border" >Log out</button>
        </form>


    </div>

    <div class="container mt-3 log-out">

        <form action="/deleteStudent" method="post">
            <button class="font-weight-bold btn text-left bg-white btn-block border" >Izbrisi racun</button>
        </form>


    </div>
</div>

<script src="/javascript/bottomNav.js"></script>

<script src="/javascript/resetActivity.js"></script>


<!--fontawesome-->
<script src="https://kit.fontawesome.com/a0f7adf235.js" crossorigin="anonymous"></script>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

</body>
</html>
